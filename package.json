        "@tailwindcss/typography": "^0.5.16",
        "@tailwindcss/vite": "^4.1.11",
        "@tanstack/router-plugin": "^1.125.6",
        "@types/bun": "latest",
        "@types/pg": "^8.15.4",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@vitejs/plugin-react": "^4.7.0",
        "drizzle-kit": "^0.31.4",
        "drizzle-zero": "^0.12.0",
        "tailwindcss": "^4.0.6",
